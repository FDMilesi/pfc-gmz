<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Context params -->
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>omega2</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
        <param-value>true</param-value>
    </context-param>
    <!-- Servlet configutarion -->
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            180
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/protected/agenda/Agenda.xhtml</welcome-file>
    </welcome-file-list>
    <!-- Páginas de error -->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/errorPages/Error404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/errorPages/Error404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/errorPages/Error404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/errorPages/Error404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/errorPages/Error404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/errorPages/Error404.xhtml</location>
    </error-page>
    <!-- Seguridad -->
    <error-page>
        <error-code>403</error-code>
        <location>/errorPages/Error403.xhtml</location>
    </error-page>
    <security-constraint>
        <display-name>Acceso general</display-name>
        <web-resource-collection>
            <web-resource-name>Paginas protegidas</web-resource-name>
            <description/>
            <url-pattern>/faces/protected/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Páginas que puede ver tanto la secretaria como el dueño del consultorio</description>
            <role-name>secretaria</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Acceso a caja</display-name>
        <web-resource-collection>
            <web-resource-name>Funciones de caja</web-resource-name>
            <description/>
            <url-pattern>/faces/caja/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Sólo el admin o dueño puede administrar la caja</description>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/faces/login/login.xhtml</form-login-page>
            <form-error-page>/faces/login/loginError.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Usuarios con permisos restringidos</description>
        <role-name>secretaria</role-name>
    </security-role>
    <security-role>
        <description>Usuario con todos los permisos</description>
        <role-name>admin</role-name>
    </security-role>
    <!--MIME mapping-->
    <mime-mapping>
        <extension>ttf</extension>
        <mime-type>application/x-font-ttf</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>woff</extension>
        <mime-type>application/x-font-woff</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>woff2</extension>
        <mime-type>application/x-font-woff2</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>eot</extension>
        <mime-type>application/x-font-eot</mime-type>
    </mime-mapping>
</web-app>
